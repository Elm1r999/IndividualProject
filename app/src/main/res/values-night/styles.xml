<resources>

    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.Pavilions" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pavilion_green_900</item>
        <item name="colorOnPrimary">@color/pavilion_yellow_300</item>
        <item name="colorPrimaryDark">@color/pavilion_gray_50_a600</item>
        <item name="colorOnSurface">@color/pavilion_white</item>
        <item name="colorAccent">@color/pavilion_green_300</item>
        <item name="colorSurface">@color/pavilion_green_900</item>
        <item name="colorSecondary">@color/pavilion_yellow_300</item>
        <item name="android:colorBackground">@color/pavilion_green_900</item>
    </style>

    <style name="Theme.Pavilions" parent="Base.Theme.Pavilions"/>

    <style name="Theme.Pavilions.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Pavilions.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.Pavilions.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>
